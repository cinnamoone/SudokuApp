<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="purpp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/purpleborder</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="whitt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/whiteborder</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="brrr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/board</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ligggh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/lightborder</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="brr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginBottom">48dp</item>
        <item name="android:background">@drawable/whiteborder</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:foregroundGravity">top</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>


</resources>